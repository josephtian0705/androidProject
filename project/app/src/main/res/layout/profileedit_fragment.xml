<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/profileEditText"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile Edit"
        android:textColor="@color/colorBlack"
        />

    <TextView
        android:id="@+id/profileUsername"
        android:layout_below="@+id/profileEditText"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@color/colorBlack"
        />

    <EditText
        android:inputType="text"
        android:id="@+id/usernameEdit"
        android:layout_below="@+id/profileUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/profileAge"
        android:layout_below="@+id/usernameEdit"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Age"
        android:textColor="@color/colorBlack"
        />

    <EditText
        android:inputType="number"
        android:id="@+id/ageEdit"
        android:layout_below="@+id/profileAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/profileGender"
        android:layout_below="@+id/ageEdit"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textColor="@color/colorBlack"
        />

    <TextView
        android:text="Gender"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/genderSpinner"
        android:layout_below="@+id/profileGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_below="@+id/genderSpinner"
        android:text="Save"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/changePassword"
        android:layout_below="@+id/saveButton"
        android:text="Change Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>